<% content_for :title do %>
   <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

 <div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_type %> - 
        <%= @entry.category.title %>
      </p>
    
      <div class="panel-block">
        Calories: <%= @entry.calories %>
      </div>
      <div class="panel-block">
        Proteins: <%= @entry.proteins %>
      </div>
      <div class="panel-block">
        Carbohydrates: <%= @entry.carbohydrates %>
      </div>
      <div class="panel-block">
        Fats: <%= @entry.fats %>
      </div>
    </nav>

    <p class="panel-tab is-centered">
      <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-outlined is-link" %> 
      <%= link_to 'Daily Log', entries_path, class: "button is-outlined is-gray" %> 
      <%= link_to 'Delete', entry_path(@entry), method: :delete, 
        data: {confirm: "Are you sure?"}, class: "button is-pulled-right is-outlined is-danger" %>
    </p>


  </div>
</div>



